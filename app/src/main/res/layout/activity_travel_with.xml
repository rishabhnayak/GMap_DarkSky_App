<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.MsoftTexas.WeatherOnMyTripRoute.TravelWithActivity">

    <LinearLayout
        android:id="@+id/test"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            app:cardCornerRadius="5dp"
            app:cardElevation="3dp"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioGroup

                        android:id="@+id/test_radio"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/_1"
                            android:text="one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                        <RadioButton
                            android:text="two"
                            android:id="@+id/_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                        <RadioButton
                            android:text="three"
                            android:id="@+id/_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                        <!--<RadioButton-->
                            <!--android:text="four"-->
                            <!--android:id="@+id/_4"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--/>-->
                        <!--<RadioButton-->
                            <!--android:text="five"-->
                            <!--android:id="@+id/_5"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--/>-->
                    </RadioGroup>
                </android.support.v7.widget.CardView>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_margin="10dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#ffffff"
        android:layout_weight="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_weight="1"
                android:id="@+id/a"
                android:padding="3dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <ImageView
                android:layout_weight="1"
                android:id="@+id/b"
                android:padding="3dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <ImageView
                android:layout_weight="1"
                android:id="@+id/c"
                android:padding="3dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <!--<ImageView-->
            <!--android:layout_weight="1"-->
            <!--android:id="@+id/d"-->
            <!--android:padding="3dp"-->
            <!--android:layout_width="40dp"-->
            <!--android:layout_height="40dp" />-->
            <!--<ImageView-->
            <!--android:layout_weight="1"-->
            <!--android:id="@+id/e"-->
            <!--android:padding="3dp"-->
            <!--android:layout_width="40dp"-->
            <!--android:layout_height="40dp" />-->
        </LinearLayout>


    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_weight="1"
        android:layout_margin="7dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:gravity="center"
            android:id="@+id/option"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp"
            android:textAllCaps="true"
            android:text="options"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


</LinearLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/option_list"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:paddingLeft="5dp"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="13sp"
                                android:textAllCaps="true"
                                android:text="Avoid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <CheckBox
                                android:id="@+id/highway"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:text="Highways"
                                />
                            <CheckBox
                                android:id="@+id/tolls"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:text="Tolls"
                                />
                            <CheckBox
                                android:id="@+id/ferries"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:text="Ferries"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="13sp"
                                android:textAllCaps="true"
                                android:text="Distance units"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <RadioGroup
                                android:id="@+id/distance_unit"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <RadioButton
                                    android:padding="10dp"
                                    android:id="@+id/automatic"
                                    android:text="automatic"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    />
                                <RadioButton
                                    android:padding="10dp"
                                    android:text="miles"
                                    android:id="@+id/miles"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    />
                                <RadioButton
                                    android:padding="10dp"
                                    android:text="km"
                                    android:id="@+id/km"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    />
                            </RadioGroup>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

<android.support.v7.widget.RecyclerView
    android:layout_below="@+id/test"
    android:id="@+id/recycler"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

</android.support.v7.widget.RecyclerView>

</RelativeLayout>
